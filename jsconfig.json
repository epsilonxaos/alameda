// jsconfig.json at project root
{
	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": true,
		"jsx": "preserve",
		"module": "ES2022",
		"paths": {
			"@/*": ["./resources/js/react/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": ["src/**/*.{ts|jsx|js|tsx}", "src/**/**/*.{ts|jsx|js|tsx}", "src/**/**/**/.{ts|jsx|js|tsx}"]
}
