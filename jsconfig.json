// jsconfig.json at project root
{
	"compilerOptions": {
		"checkJs": true,
		"jsx": "preserve",
		"module": "ES2022",
		"paths": {
			"@/*": ["resources/js/react"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"],
	"include": [
		"resources/js/**/*.ts",
		"resources/js/**/**/*.ts",
		"resources/js/**/**/**/.ts",
		"resources/js/**/*.jsx",
		"resources/js/**/**/*.jsx",
		"resources/js/**/**/**/*.jsx",
		"resources/js/**/*.tsx",
		"resources/js/**/**/*.tsx",
		"resources/js/**/**/**/*.tsx",
		"resources/js/**/*.js",
		"resources/js/**/**/*.js",
		"resources/js/**/**/**/*.js"
	]
}
